<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.financial.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_expenditure"
        android:name="com.example.financial.ui.notifications.NotificationsFragment"
        android:label="@string/title_expenditure"
        tools:layout="@layout/fragment_expenditure" />

    <fragment
        android:id="@+id/navigation_currency"
        android:name="com.example.financial.ui.dashboard.DashboardFragment"
        android:label="@string/title_currency"
        tools:layout="@layout/fragment_currency" />

    <fragment
        android:id="@+id/navigation_stock"
        android:name="com.example.financial.ui.notifications.NotificationsFragment"
        android:label="@string/title_stock"
        tools:layout="@layout/fragment_stock" />

    <fragment
        android:id="@+id/navigation_transfer"
        android:name="com.example.financial.ui.notifications.NotificationsFragment"
        android:label="@string/title_transfer"
        tools:layout="@layout/fragment_transfer" />

</navigation>